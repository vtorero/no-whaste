{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["es2020", "dom"],
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "long"], // Add "long" here
    "useDefineForClassFields": false,
    "skipLibCheck": true
  }
}
